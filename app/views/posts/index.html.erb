<nav class="navbar fixed-top navbar-dark bg-transparent">
    <span class="navbar-brand"><form method="get" action="/users/sign_in">
            <button type="submit" class="btn text-light bg-dark">
                <%= link_to "Iniciar Sesión", posts_dashboard_path %>
        </button>
    </span>  
</nav>
<br>
<div class="container, mt-3, pt-3">
    <table class="table">
        <tr>
            <th>Título</th>
            <th>Fecha creación</th>
            <th>Imágen</th>
            <th>Contenido</th>
        </tr>
        <% @posts.each do |post| %>
            <tr>
                <td><%= post.title %> </td>
                <td><%= post.created_at %> </td>
                <td><%= image_tag post.image %> </td> 
                <td><%= post.content %> </td>
            </tr>
        <%end%>
    </table>
</div>


